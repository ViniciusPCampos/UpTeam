@model UPTEAM.Models.MarcoModel

@{
    ViewBag.Title = "Detalhe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        @Html.DisplayFor(model => model.NomeMarco)
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Detalhe</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NomeMarco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NomeMarco)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Deadline)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DeadlineFmt)
                </dd>

            </dl>
        </div>
        <!-- /.box-body -->
    </div>
    <p>
        @Html.ActionLink("Editar", "Editar", new { id = Model.IdMarco  }, null) |
        @Html.ActionLink("Voltar para Projeto", "Detalhe", "Projeto", new{id = Model.Projeto},null)
    </p>
</section>

