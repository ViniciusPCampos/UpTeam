@model UPTEAM.Models.MarcoModel

@{
    ViewBag.Title = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Novo Marco
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Nome Equipe</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        @using (Html.BeginForm("Criar", "Marco", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Projeto)
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-xs-6">
                    <label>Nome:</label>
                    <br />
                    @Html.EditorFor(model => model.NomeMarco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeMarco, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6">
                    <label>Data:</label>
                    <br />
                    @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12">
                    <label>Descrição:</label>
                    <br />
                    @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <button class="btn btn-default">Cancelar</button>
            </div>

        }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>