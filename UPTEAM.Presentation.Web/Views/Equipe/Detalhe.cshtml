@model UPTEAM.Models.EquipeModel

@{
    ViewBag.Title = "Detalhe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        Equipes
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Layout</a></li>
        <li class="active">Fixed</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@Html.DisplayFor(model => model.NomeEquipe)</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>

            </dl>
            <div class="row">
                <div class="col-md-12">
                    <h2>Adicionar Membros:</h2>
                    <label>Usuários:</label>
                    <input type="text" class="form-control" name="name" value="" />
                    <br/>
                    <input type="submit" name="name" class="btn btn-primary" value="Adicionar" />
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <p>
                @Html.ActionLink("Edit", "Editar", new {  id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->