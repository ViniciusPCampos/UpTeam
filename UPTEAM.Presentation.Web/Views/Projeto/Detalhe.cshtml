@model UPTEAM.Models.ProjetoModel

@{
    ViewBag.Title = "Detalhe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @Html.DisplayFor(model => model.NomeProjeto)
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Informações</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
                <h4>ProjetoModel</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.NomeProjeto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NomeProjeto)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DescricaoProjeto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DescricaoProjeto)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DataInicioProjeto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataInicioProjeto)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DataTerminoProjeto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataTerminoProjeto)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EquipeProjeto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EquipeProjeto)
                    </dd>

                </dl>
            </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <p>
                @Html.ActionLink("Edit", "Editar", new { id = Model.ID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Membros</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <p>Adicionar Membros:</p>
                    <label>Usuários:</label>
                    <input type="text" class="form-control" name="name" value="" />
                    <br />
                    <input type="submit" name="name" class="btn btn-primary" value="Adicionar" />
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    @Html.ActionLink("Novo Projeto", "Criar", "Projeto")
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Projetos</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">


        </div>
        <!-- /.box-body -->
    </div>

</section>
<!-- /.content -->