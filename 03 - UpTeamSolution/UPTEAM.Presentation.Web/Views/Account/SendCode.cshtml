@model UPTEAM.Infra.CrossCutting.Identity.Model.SendCodeViewModel
@{
    ViewBag.Title = "Enviar código de verificação";
    Page.Title = "Enviar código de verificação";
    Layout = "~/Views/Shared/_ExternalAreaLayout.cshtml";
}
<div class="register-box-body">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <hr />
        <div class="row">
            <div class="col-md-8">
                Provedor de Two Factor Authentication:
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    }
</div>
